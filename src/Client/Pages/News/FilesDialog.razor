<MudDialog>
    <DialogContent>
        <MudFileUpload T="IReadOnlyList<IBrowserFile>" FilesChanged="UploadFiles">
            <ButtonTemplate>
                <MudButton HtmlTag="label"
                           Variant="MudBlazor.Variant.Filled"
                           Color="Color.Primary"
                           StartIcon="@Icons.Material.Filled.CloudUpload"
                           for="@context">
                    Multiple Files
                </MudButton>
            </ButtonTemplate>
        </MudFileUpload>
        <MudContainer Style="max-height:300px; overflow-y:scroll">
            <MudGrid ItemAspectRatio="1:1" AutoSize="true" JustifyContent="JustifyContent.FlexStart">
                @foreach (var image in images)
                {
                    <MudItem>
                        <MudPaper Class="p-2" Style="height: 100%;">
                            <MudButton OnClick="() => SelectImage(image)">
                                <MudImage Src="@image" Height="100"/>
                            </MudButton>
                        </MudPaper>
                    </MudItem>
                }
            </MudGrid>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Ok">Ok</MudButton>
    </DialogActions>
</MudDialog>