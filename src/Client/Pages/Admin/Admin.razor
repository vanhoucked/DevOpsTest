@page "/admin"
@attribute [Authorize(Roles = "Administrator")]

<PageTitle>Admin</PageTitle>

<AuthorizeView>
    <Authorized>
        <!-- Content for authorized users -->
    </Authorized>
    <NotAuthorized>
        @inject NavigationManager Navigation

        @{
            // Redirect to the home page
            Navigation.NavigateTo("/");
        }
    </NotAuthorized>
</AuthorizeView>
